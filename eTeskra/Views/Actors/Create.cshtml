@model Actor

@{
    ViewData["Title"] = "Create a new actor";
}

<section class="py-5">
    <div class="container py-5">
        <div class="row mb-4 mb-lg-5">
            <div class="col-md-8 col-xl-6 text-center mx-auto">
                <p class="fw-bold text-success mb-2">Add a New Actor</p>
                <h2 class="fw-bold">Welcome</h2>
            </div>
        </div>
        <div class="row d-flex justify-content-center">
            <div class="col-md-6 col-xl-4">
                <div class="card">
                    <div class="card-body text-center d-flex flex-column align-items-center">
                        <div class="bs-icon-xl bs-icon-circle bs-icon-primary shadow bs-icon my-4">
                            <img id="ProfilePicturePreview" class="border-info rounded-circle" style="max-width: 100px" />
                        </div>
                        <form asp-action="Create" data-bs-theme="light">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="mb-3">
                                <input asp-for="ProfilePictureURL" class="form-control" type="text" placeholder="Profile Picture URL" />
                                <span asp-validation-for="ProfilePictureURL" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <input asp-for="FullName" class="form-control" type="text" placeholder="Full Name" />
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <input asp-for="Bio" class="form-control" type="text" placeholder="Bio" />
                                <span asp-validation-for="Bio" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <button class="btn btn-primary shadow d-block w-100" type="submit">Create</button>
                            </div>
                            <div class="mb-3">
                                <a class="btn btn-secondary shadow d-block w-100" asp-action="Index">Show All Actors</a>
                            </div>
                            
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        $(document).ready(function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $("#ProfilePictureURL").val();
        });

        $("#ProfilePictureURL").on("change", function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $(this).val();
        });
    </script>
}
