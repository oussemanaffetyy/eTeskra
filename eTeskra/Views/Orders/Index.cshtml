@model List<Order>
@{
	ViewData["Title"] = "All Orders";
}
<div class="row">
	<div class="col-md-8 offset-2">
		<p>
			<h4>List of all orders </h4>
		</p>
		<table class="table">
			<thead>
				<tr>
					<th>Order</th>
					<td>Items</td>
					<th>Total</th>
					@if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
					{
						<th>User</th>
					}
				</tr>
			</thead>
			<tbody>
				@foreach(var order in Model)
				{
					<tr>
						<td class="align-middle">@order.Id</td>
						<td class="align-middle">
							<ul style="list-style-type:none">
									@foreach (var item in order.Items)
								{
									<li>
										<div class="aler alert-info" role="alert">
											<span class="badge bg-success">@item.Amount</span> [@item.Price.ToString("c")] - @item.Movie.Name
										</div>
									</li>
								}
							</ul>
						</td>
						<td class="align-middle">
							@order.Items.Select(m => m.Movie.Price * m.Amount).Sum().ToString("c")</td>
						@if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
						{
							<td class="align-middle"> @order.User?.FullName </td>
						}
					</tr>
				}
			</tbody>
		</table>
	</div>

</div>